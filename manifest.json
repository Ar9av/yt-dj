{
  "manifest_version": 3,
  "name": "YouTube Timestamp DJ",
  "version": "1.0.0",
  "description": "Assign timestamps to keyboard keys QWERTYUIOP and jump to them while watching YouTube videos",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Timestamp DJ"
  },
  "icons": {
    "16": "yt-dj.png",
    "48": "yt-dj.png",
    "128": "yt-dj.png"
  }
}
